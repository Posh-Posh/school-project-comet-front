{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
<link href="https://fonts.googleapis.com/css?family=Sue+Ellen+Francisco&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('css/' ~ 'style.css') }}"/>
{% endblock %}

{% block body %}

    


<div class="container">
    <form class="form-horizontal" role="form">
            <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
            {{ form_start(registerForm) }}

        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">{{ form_label(registerForm.lastname) }}</label>
            <div class="col-sm-9">{{ form_widget(registerForm.lastname) }}</div>
        </div>

        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">{{ form_label(registerForm.firstname) }}</label>
            <div class="col-sm-9">{{ form_widget(registerForm.firstname) }}</div>
        </div>

        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">{{ form_label(registerForm.username) }}</label>
            <div class="col-sm-9">{{ form_widget(registerForm.username) }}</div>
        </div>


        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">{{ form_label(registerForm.email) }}</label>
            <div class="col-sm-9">{{ form_widget(registerForm.email) }}</div>
        </div>


        {{ form_row(registerForm.password) }}
        <div class="btn btn-primary ">
            {{ form_row(registerForm.submit) }}
        </div>
    {{ form_end(registerForm) }}
    </form>
    <a href="{{ path('home') }}">Retour en salle d'embarquement</a> 
</div>


    
{% endblock %}